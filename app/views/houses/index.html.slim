javascript:
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })

div.house-container
  h3 This Month's Houses:
  div.house-neighborhood
    - @current_houses.each_with_index do |h, i|
      div class="card house-card"
        .card-header.house-card-header
          b style="flex: 1" #{h.house_name}  
          | #{"ðŸ¥‡" if h.place == 'first'} #{"ðŸ¥ˆ" if h.place == 'second'} #{"ðŸ¥‰" if h.place == 'third'}
          - unless is_in_a_house? || !logged_in?
            a.nav-link.house-icon href="houses/#{h.id}/join" title="Join House"
              i.fa.fa-user-plus
          - if logged_in_as_moderator
            a.nav-link.house-icon href="#{edit_house_path(h)}" title="Edit House"
              i.fa.fa-edit
        .card-body.house-card-body
          div.house-table-cell
            p.house-title Name
            p.house-title Score
          - h.participants.each do |u|
            div.house-participant
              p #{u[:name]}
              p #{u[:score]}
          b.house-spacer
          b Total: #{h.total_score}
          
  

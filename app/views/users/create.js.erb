<% if ENV['DISABLE_REGISTRATION'] == 'TRUE' %>
   $('#signup-form').html('<div class="alert alert-danger">Registration has temporarily been closed. Please check back later.</div> \
    <%=j render("layouts/signup_form") %>')
<% elsif @user.valid? %>
  <%# hide the modal and go to the new user's profile page %>
    $('#login-modal').modal('hide');
    window.location='<%= user_path(@user) %>'
  <% else %>
  <%# Render the form again with any errors from @user %>
    $('#signup-form').html('<%=j render("layouts/signup_form") %>');
<% end %>

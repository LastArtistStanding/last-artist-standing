<%= form_for @submission, html: { multipart: true } do |f| %>
  <div class="row">
  <div class="col-lg-6">
	  <div class="card">
	    <div class="card-header"><b>New Submission</b></div>
      <div class="card-body">
    
        <% if @submission.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being posted:</h2>
            <ul>
              <% @submission.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <%= f.label :drawing, :class => "col-3 col-form-label" %> <br>
          <div class="col-9">
            <%= f.file_field :drawing %>
          </div>
        </div>

    
        <div class="form-group row">
          <%= f.label :nsfw_level, :class => "col-3 col-form-label" %>
          <div class="col-9">
            <%= f.select :nsfw_level, options_for_select([['Safe', 1], ['Questionable', 2], ['Explicit', 3]], 1), {}, { :class => 'custom-select' } %>
          </div>
        </div>

        <div class="form-group row">
          <div class="offset-sm-6 col-sm-6">
            <%= f.submit :class => 'btn btn-primary', :style => "margin-bottom: 0;" %>
          </div>
        </div>
  
      </div>
    </div>
  </div>
  
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header"><b>Eligible Challenges</b></div>
      <div class="card-body">
        <p class="card-text">
          You can submit to the following challenges:<br>
          <div class="form-group row">
            <%= label_tag :postfrequency, "DAD Post Frequency", :class => "col-3 col-form-label" %>
            <div class="col-9">
            <%= select_tag :postfrequency, options_for_select([['Daily', 1], ['Every Other Day', 2], ['Every 3 Days', 3], ['Every 4 Days', 4], ['Every 5 Days', 5], ['Every 6 Days', 6], ['Weekly', 7]], 1), { :class => 'custom-select' } %>
            </div>
          </div><br>
          <small style="color: grey;">(<b>Note:</b> You will always submit to the DAD and the current seasonal challenges.)</small>
        </p>
      </div>
    </div>
  </div>
  </div>
<% end %>

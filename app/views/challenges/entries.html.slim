- provide(:title, "Entries for #{@challenge.name}")
// TODO fix:
.container-fluid style="margin-top: 2rem;"
  .row
    .col-lg-1

    .col-lg-10
      .card
        .card-body
          = page_entries_info @entries

      - if @entries.count > @entry_per_page
        .card
          .card-body
            .digg_pagination
              = will_paginate @entries, container: false

      .row
        .col-lg-12
          .card
            .card-header
              b Challenge Entries

            .card-body style="display:flex; flex-wrap: wrap;"
              - if @entries.count == 0
                | No entries made yet!
              - else
                - @entries.each do |submission|
                  = render partial: "application/submission_preview", locals: { submission: submission, user_badge: true, show_follows: true }

      - if @entries.count > @entry_per_page
        .card
          .card-body
            .digg_pagination
              = will_paginate @entries, container: false

      a.btn.btn-primary href="/challenges/#{@challenge.id}"
        span.fa.fa-undo
        |  Back

    .col-lg-1
